<input type="checkbox" id="reservation-modal" class="modal-toggle" />
<div class="modal">
  <div class="relative modal-box">
    <label for="reservation-modal" class="absolute btn btn-sm btn-accent btn-circle right-2 top-2">âœ•</label>
    <h3 class="mb-8 text-2xl font-medium">Reserve appointment</h3>

    <form accept-charset="UTF-8" action="<%= agent_appointments_path(agent) %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" id="availability_id" name="availability_id">
      <div class="grid grid-cols-2">
        <div class="grid grid-cols-[25%_75%] gap-4 appointment-details -mb-5">
          <div>
            <p class="mb-1 font-medium">Agent:</p>
            <label class="block mb-1 font-medium" for="day">Day:</label>
            <label class="block mb-1 font-medium" for="start_at">Start:</label>
            <label class="block mb-1 font-medium" for="end_until">End:</label>
          </div>
          <div>
            <p class="w-3/4 mb-1 truncate"><%= agent.name %></p>
            <input type="text" id="appointment-day" name="appointment[day_of_week]" class="w-3/4 mb-1 bg-transparent appointment-day" disabled>
            <input type="text" id="appointment-start" name="appointment[start_at]" class="w-3/4 mb-1 bg-transparent text-primary appointment-start" disabled>
            <input type="text" id="appointment-end" name="appointment[end_until]" class="w-3/4 mb-1 bg-transparent appointment-end" disabled>
          </div>
        </div>

        <div class="-mt-4 user-details">
          <div class="w-full max-w-xs form-control">
            <label class="label" for="name">
              <span class="text-xs font-semibold label-text">Your name:</span>
            </label>
            <input type="text" placeholder="John Doe" id="name" name="user[name]" class="w-full max-w-xs input input-sm input-bordered" required/>
          </div>

          <div class="w-full max-w-xs form-control">
            <label class="label" for="email">
              <span class="text-xs font-semibold label-text">Your email:</span>
            </label>
            <input type="email" placeholder="john@company.com" id="email" name="user[email]" class="w-full max-w-xs input input-sm input-bordered" required/>
          </div>
        </div>
      </div>
      <div class="w-full pt-8">
        <button class="w-full btn btn-sm btn-primary" type="submit">Reserve</button>
      </div>
    </form>
  </div>
</div>
